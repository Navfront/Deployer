{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json",
    "tsconfigRootDir": "."
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      "never"
    ]
  },
  "ignorePatterns": [
    "build/**/*.js"
  ]
}
